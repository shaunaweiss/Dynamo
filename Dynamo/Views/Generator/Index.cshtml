

<!DOCTYPE html>
<html lang="en">

<body class="mobile-shift">
    <header id="generator">
        <div class="claim-lockup">
            <div class="claim">
            </div>
        </div>
        <div class="angled-overlay"></div>  
    </header>
    @model Helper.External.Model.User
    @{
        ViewBag.Title = "Create a User";
        Helper.External.Model.User details = (Helper.External.Model.User)ViewBag.User;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <secion>
        <div class="container-fluid">
            <h1>
                Generate Your Workout
            </h1>
           
            @using (Html.BeginForm("ViewModel", "Generator", FormMethod.Post))
            {
                <div class="bd-example">
                    <div style="text-align:center">
                        <div class="text-lockup"></div>
                        <h3>DYNAMO</h3>
                        <h2>GENERATE YOUR WORKOUT</h2>
                        <img src="~/Content/assets/img/drop-muted.png" />
                        <p> <i> Please fill out the form to the right in order to enable us to customize a workout just for you. </i> </p>
                    </div>
                    <div class="input-group" style="padding-bottom:15px">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="">FIRST 	&amp; LAST NAME</span>
                        </div>
                        @Html.TextBoxFor(m => m._fName, new { @class = "from-control", placeholder = "Enter Heigght Here..", required = "required" })
                        @Html.TextBoxFor(m => m._lName, new { @class = "from-control", placeholder = "Enter Heigght Here..", required = "required" })
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01">WORKOUT TYPE</label>
                        </div>
                        <div class="custom-select" id="inputGroupSelect01">
                            @Html.DropDownListFor(m => m._type, new List<SelectListItem>
                    {   new SelectListItem{Text="CARDIO", Value=" CARDIO "},
                    new SelectListItem{Text="STRENGTH", Value=" STRENGTH "},
                    new SelectListItem { Text = "FLEXIBILITY", Value =  " FLEXIBILITY " }}, "Please select")
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <div class="custom-select" id="inputGroupSelect02">
                            @Html.DropDownListFor(m => m._focus, new List<SelectListItem>
                    { new SelectListItem{Text="UPPERBODY", Value=" UPPERBODY "},
                    new SelectListItem{Text="CORE", Value=" CORE "},
                    new SelectListItem{Text="LOWERBODY", Value=" LOWERBODY "}, }, "Please select")

                        </div>
                        <div class="input-group-append">
                            <label class="input-group-text" for="inputGroupSelect02">FOCUS AREA</label>
                        </div>
                    </div>
                    <fieldset class="form-group form-inline">
                        <div class="row">
                            <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                            <div class="col-sm-10">
                                <div class="form-check">
                                        @Html.RadioButtonFor(m => m._gender, "Male")
  
                                </div>
                                <div class="form-check">
                                        @Html.RadioButtonFor(m => m._gender, "Female")
                                </div>
                            </div>
                            <div class="form-inline">
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m._targetweight, new { @class = "from-control", placeholder = "Enter Target Weight Here..", required = "required" })
                              
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m._currentweight, new { @class = "from-control", placeholder = "Enter Weight Here..", required = "required" })
                                    
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <input type="submit" value="Submit" />
            }
    </secion>
