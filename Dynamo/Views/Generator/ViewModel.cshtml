
<!DOCTYPE html>
<html lang="en">

<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body class="mobile-shift">
    <header id="generator">
        <div class="claim-lockup" >
            <div class="claim">
            </div>
        </div>
        <div class="angled-overlay"></div>

    </header>
    @model Dynamo.Models.ViewModel
    @{
        ViewBag.Title = "Create a User";
        Dynamo.Models.ViewModel details = (Dynamo.Models.ViewModel)ViewBag.vwUser;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <secion id="generator" class="grid">
        <div class="table-responsive">
            <h1>
                Generate Your Workout
            </h1>
            @{

                if (IsPost)
                {
                    <h1> User Details </h1>
                    <table class="table-bordered">
                        <tr>
                            <td>Gender: </td>
                            <td> @details.user._gender </td>
                        </tr>
                        <tr>
                            <td>Age: </td>
                            <td> @details.user._age </td>
                        </tr>
                        <tr>
                            <td> Current Weight: </td>
                            <td> @details.user._currentweight </td>
                        </tr>
                        <tr>
                            <td> Target Weight: </td>
                            <td> @details.user._targetweight</td>
                        </tr>
                        <tr>
                            <td> Height: </td>
                            <td> @details.user._height </td>
                        </tr>
                        <tr>
                            <td> Workout Focus: </td>
                            <td> @details.user._focus</td>
                        </tr>
                        <tr>
                            <td> Workout Type: </td>
                            <td> @details.user._type </td>
                        </tr>
                        <tr>
                            <td> Difficulty Level: </td>
                            <td> @details.user._difficulty</td>
                        </tr>
                        <tr>
                            <td> User BMI: </td>
                            <td> @details.user.BMI</td>
                        </tr>
                        <tr>
                            <td> Distance from target: </td>
                            <td> @details.user.getDifferencce</td>
                        </tr>
                    </table>
                    <h1> Workout Generated </h1>
                   <table class="table-bordered">
                       <thread>
                           <tr>

                               <th> Exercise Name </th>

                               <th> Discription </th>

                               <th> Reps </th>

                               <th> Sets </th>

                           </tr>
                       </thread>
                       <tbody>
                           @*This is our attempt to print out the routines for a user*@
                           @foreach (var item in details.routines)
                           {
                               <tr>
                                   <td> @item.name </td>
                                   <td> @item.description </td>
                                   <td> @item.reps </td>
                                   <td> @item.sets </td>
                               </tr>
                           }
                       </tbody>
                        </table>
                }
            }


           </div>
        @Html.ActionLink("Back to Form", "Generator/Index")
           </body>
        
